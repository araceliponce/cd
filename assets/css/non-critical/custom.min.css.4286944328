.btn--glow:focus-visible {
  transform: translateY(-0.2em);
  background-color: var(--fg3);
}
.btn--glow:hover {
  background-color: var(--fg3);
  box-shadow: 0px 10px 25px rgba(46, 229, 157, 0.4);
  color: #fff;
  transform: translateY(-0.2em);
}
