.menu {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  max-width: min(700px, 90vw);
  margin-inline: auto;
  font-size: clamp(1.5rem, 3vw + 10px, 5rem);
}
.menu__item {
  color: #2c3a47;
  background: #bdc581;
  overflow: hidden;
}
.menu__item:nth-child(2) {
  background: #f8efba;
}
.menu__item:nth-child(3) {
  background: #fea47f;
}
.menu__item:nth-child(even) .menu__link-image {
  animation-direction: reverse;
}
.menu__link {
  color: currentColor;
  position: relative;
  text-decoration: none;
  position: relative;
  text-align: center;
  display: block;
  height: 100%;
}
.menu__link-text {
  display: block;
  padding: 2em 0.5em;
}
.menu__link-text--solid {
  position: relative;
  z-index: 1;
}
.menu__link-text--outline {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  left: 0;
  z-index: 3;
  -webkit-text-stroke: 2px #2c3a47;
  -webkit-text-fill-color: rgba(0, 0, 0, 0);
}
.menu__link-image {
  position: absolute;
  z-index: 2;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  transition: opacity 0.1s cubic-bezier(0.5, 0, 0.75, 0);
  width: 35%;
  height: auto;
  filter: grayscale(35%) brightness(130%) saturate(65%) contrast(65%);
  animation: floatAndBob 30s infinite normal linear both paused;
}
.menu__link:hover .menu__link-image {
  opacity: 1;
  transition: opacity 0.5s cubic-bezier(0.76, 0, 0.24, 1);
  animation-play-state: running;
}
@keyframes floatAndBob {
  0% {
    transform: translate(-50%, -50%) scale(1) rotate(0deg);
  }
  25% {
    transform: translate(-25%, -75%) scale(0.85) rotate(5deg);
  }
  50% {
    transform: translate(-75%, -50%) scale(1) rotate(0deg);
  }
  75% {
    transform: translate(-25%, -25%) scale(1.15) rotate(-5deg);
  }
  100% {
    transform: translate(-50%, -50%) scale(1) rotate(0deg);
  }
}
